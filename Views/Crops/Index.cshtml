@model IEnumerable<FarmTrack.Models.Crop>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CropName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CropType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlantingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrowthDurationInDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedHarvestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiresFertilizing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FertilizingReminder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiresWatering)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WateringReminder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiresPestControl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PestControlReminder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CropName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CropType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlantingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrowthDurationInDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedHarvestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiresFertilizing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FertilizingReminder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiresWatering)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WateringReminder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiresPestControl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PestControlReminder)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CropId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CropId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CropId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
