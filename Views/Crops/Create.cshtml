@model FarmTrack.Models.Crop

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Crop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CropName" class="control-label"></label>
                <input asp-for="CropName" class="form-control" />
                <span asp-validation-for="CropName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CropType" class="control-label"></label>
                <input asp-for="CropType" class="form-control" />
                <span asp-validation-for="CropType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlantingDate" class="control-label"></label>
                <input asp-for="PlantingDate" class="form-control" />
                <span asp-validation-for="PlantingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrowthDurationInDays" class="control-label"></label>
                <input asp-for="GrowthDurationInDays" class="form-control" />
                <span asp-validation-for="GrowthDurationInDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedHarvestDate" class="control-label"></label>
                <input asp-for="ExpectedHarvestDate" class="form-control" />
                <span asp-validation-for="ExpectedHarvestDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RequiresFertilizing" /> @Html.DisplayNameFor(model => model.RequiresFertilizing)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FertilizingReminder" class="control-label"></label>
                <input asp-for="FertilizingReminder" class="form-control" />
                <span asp-validation-for="FertilizingReminder" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RequiresWatering" /> @Html.DisplayNameFor(model => model.RequiresWatering)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="WateringReminder" class="control-label"></label>
                <input asp-for="WateringReminder" class="form-control" />
                <span asp-validation-for="WateringReminder" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RequiresPestControl" /> @Html.DisplayNameFor(model => model.RequiresPestControl)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PestControlReminder" class="control-label"></label>
                <input asp-for="PestControlReminder" class="form-control" />
                <span asp-validation-for="PestControlReminder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
