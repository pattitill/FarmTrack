@model FarmTrack.Models.Reminder

@{
    ViewData["Title"] = "Create Reminder";
}

<h2>@ViewData["Title"]</h2>

<!-- Back button to Reminders -->
<a asp-controller="Reminders" asp-action="Index" class="btn btn-secondary">Back to Reminders</a>


<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CropName" class="control-label">Crop Name</label>
        <input asp-for="CropName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReminderType" class="control-label">Reminder Type</label>
        <select asp-for="ReminderType" class="form-control" asp-items="ViewBag.ReminderTypes"></select>
    </div>

    <div class="form-group">
        <label asp-for="ReminderTime" class="control-label">Reminder Time</label>
        <input asp-for="ReminderTime" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create Reminder</button>
</form>