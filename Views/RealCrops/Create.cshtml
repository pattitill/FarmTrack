@model FarmTrack.Models.RealCrop

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RealCrop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CropId" class="control-label"></label>
                <select asp-for="CropId" class="form-control" asp-items="ViewBag.CropId"></select>
                <span asp-validation-for="CropId" class="text-danger"></span> <!-- Validation for CropId -->
            </div>
            <div class="form-group">
                <label asp-for="Planting" class="control-label"></label>
                <input asp-for="Planting" class="form-control" />
                <span asp-validation-for="Planting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedHarvestDate" class="control-label"></label>
                <input asp-for="ExpectedHarvestDate" class="form-control" type="date" /> <!-- Date input type -->
                <span asp-validation-for="ExpectedHarvestDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualHarvestDate" class="control-label"></label>
                <input asp-for="ActualHarvestDate" class="form-control" type="date" /> <!-- Date input type -->
                <span asp-validation-for="ActualHarvestDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" /> <!-- Number input for amount -->
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
