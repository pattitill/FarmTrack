<table class="table">
    <thead>
    <tr>
        <th>Crop Name</th>
        <th>Crop Type</th>
        <th>Planting Date</th>
        <th>Expected Harvest Date</th>
        <th>Actual Growth Time</th>
        <th>Actual Harvest Date</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var crop in Model)
    {
        <tr>
            <td>@crop.CropName</td>
            <td>@crop.CropType</td>
            <td>@crop.PlantingDate.ToString("yyyy-MM-dd")</td>
            <td>@crop.ExpectedHarvestDate</td> <!-- Now ExpectedHarvestDate will display calculated date or saved date -->
            <td>@crop.ActualGrowthTime</td>
            <td>@crop.ActualHarvestDate</td>
        </tr>
    }
    </tbody>
</table>