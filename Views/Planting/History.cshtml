@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Harvested Crop History";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
    <tr>
        <th>Crop Name</th>
        <th>Crop Type</th> <!-- Added Crop Type column -->
        <th>Planting Date</th>
        <th>Expected Harvest Date</th>
        <th>Actual Growth Time</th>
        <th>Actual Harvest Date</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var crop in Model)
    {
        <tr>
            <td>@crop.CropName</td>
            <td>@crop.CropType</td> <!-- Display Crop Type here -->
            <td>@crop.PlantingDate.ToString("yyyy-MM-dd")</td>
            <td>@crop.ExpectedHarvestDate?.ToString("yyyy-MM-dd") ?? "N/A"</td>
            <td>@crop.ActualGrowthTime</td>
            <td>@crop.ActualHarvestDate</td>
        </tr>
    }
    </tbody>
</table>