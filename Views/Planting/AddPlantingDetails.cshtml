@model FarmTrack.Models.CropPlantingViewModel

<h2>Enter Planting Details</h2>

<form asp-action="AddPlantingDetails" method="post">
    <div class="form-group">
        <label for="GrowthDurationInDays">Growth Duration (in Days)</label>
        <input asp-for="GrowthDurationInDays" class="form-control" />
        <span asp-validation-for="GrowthDurationInDays" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PreferredTemperature">Preferred Temperature (in °C)</label>
        <input asp-for="PreferredTemperature" class="form-control" />
        <span asp-validation-for="PreferredTemperature" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Calculate Optimal Planting Date</button>
</form>
